<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="16dp">

    <View
        android:id="@+id/ph_poster_bg"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/light_grey_100" />

    <View
        android:id="@+id/ph_poster"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/ph_poster_bg"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-110dp"
        android:background="@drawable/bg_grey_rounded" />

    <View
        android:id="@+id/ph_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ph_poster"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/ph_poster" />

    <View
        android:id="@+id/ph_rating"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_below="@id/ph_poster_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_grey_rounded" />

    <View
        android:id="@+id/ph_genre"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_below="@id/ph_poster"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_grey_rounded" />

    <View
        android:id="@+id/ph_release_date"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@id/ph_genre"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_grey_rounded" />

    <View
        android:id="@+id/ph_overview_title"
        android:layout_width="140dp"
        android:layout_height="28dp"
        android:layout_below="@id/ph_release_date"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_grey_rounded" />

    <View
        android:id="@+id/ph_description"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/ph_overview_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_grey_rounded" />
</RelativeLayout>
